{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".nuxt/**"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "@nado/play-vue#dev": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@nado/ui-kit-vue-docs#dev": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@nado/ui-kit-icons-vue#build": {
      "dependsOn": ["@nado/ui-kit-icons-vue#generate", "^build"],
      "outputs": ["dist/**"]
    },
    "@nado/ui-kit-icons-vue#generate": {
      "cache": true
    }
  }
}
